#!/usr/bin/env php
<?php

use function Differ\Differ\gen_diff;

$autoloadPath1 = __DIR__ . '/../../../autoload.php';
$autoloadPath2 = __DIR__ . '/../vendor/autoload.php';

if (file_exists($autoloadPath1)) {
    require_once $autoloadPath1;
} else {
    require_once $autoloadPath2;
}

$doc = <<<DOC
    Generate diff.
    
    Usage:
        gendiff (-h|--help)
        gendiff (-v|--version)
        gendiff [--format <fmt>] <firstFile> <secondFile>
    
    Options:
        -h --help                     Show this screen
        -v --version                  Show version
        --format <fmt>                Report format [default: pretty]
    DOC;

$args = \Docopt::handle($doc, array('version' => "0.0.1"));

['<firstFile>' => $path_to_first_file, '<secondFile>' => $path_to_second_file, '--format' => $format] = $args;

$resault = gen_diff($path_to_first_file, $path_to_second_file, $format);

echo $resault;
